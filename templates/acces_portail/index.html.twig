{% extends 'base.html.twig' %}

{% block title %}AccesPortail index{% endblock %}

{% block body %}
    <div class="container">
        <h1>Mot de Passe Partagés</h1>

        <table class="table table-bordered">
            <thead>
                <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Login</th>
                    <th scope="col">Password</th>
                    <th scope="col">Description</th>
                    <th scope="col">actions</th>
                </tr>
            </thead>
            <tbody>
            {% if acces_portails %}
                {% for acces_portail in acces_portails %}
                    <tr>
                        <td>{{ acces_portail.nom }}</td>
                        <td>{{ acces_portail.login }}</td>
                        <td>{{ acces_portail.password }}</td>
                        <td>{{ acces_portail.description }}</td>
                        <td>
                            <a class="btn btn-primary"
                               href="{{ path('app_acces_portail_show', {'id': acces_portail.id}) }}">
                                <i class="fa fa-eye"></i>
                                Voir
                            </a>
                            <a class="btn btn-primary"
                               href="{{ path('app_acces_portail_edit', {'id': acces_portail.id}) }}">
                                <i class="fa fa-pencil"></i>
                                Modifier
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="row">Aucun mot de passe partagés</td>
                    </tr>
                {% endfor %}
            {% endif %}
            </tbody>
        </table>
        <a class="btn btn-primary" href="{{ path('app_acces_portail_new') }}">
            <i class="fa fa-plus"></i>
            Ajouter un nouveau
        </a>
    </div>


{% endblock %}
